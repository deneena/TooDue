<style>
    html, body {
        height: 100%;
        margin: 0;
        overflow: hidden;
    }

    body {
        background-image: url("../img/tema-deer.png");
        background-size: 160px;
        background-repeat: repeat;
    }

    .container-menu {
        height:100%;
        margin-top:0px;
        display: grid;
        grid-gap: 10px;
        grid-template-columns: 1fr 4fr; /* proportii flexibile */
        /*  height: 75vh;
        width: 85vw;
        padding-left: 1rem;
            margin-top: 10vh;
        margin-left: auto; 
        margin-right: auto; 
        position:  relative;
        overflow: hidden;
        */
    }

    .side-menu-back {
        display: flex; /* flexbox */
        justify-content: center; /* centrat */
        align-items: center; /* centrat */
        border-radius: 10px;
        background-color: rgba(201, 5, 129, 0.6);
        height: 100%; /* sa se adapteeze la container */
        /*grid-column: 1 / 2;  sa fie 1/2 din container */
    }

    .side-menu {
        z-index: 1000;
        opacity: 1;
        background-color: #c90581;
        border-radius: 10px;
        padding: 15px;
        height: 100%;
        width: 90%;
    }

    .main-menu-back {
        display: flex; /* am transformat in flexbox */
        justify-content: center; /* centrat */
        align-items: center; /* centrat */
        border-radius: 10px;
        background-color: rgba(201, 5, 129, 0.6);
        height: 100%; /* sa se adapteeze la container */
        grid-column: 2 / 3; /* sa fie 2/3 din cealalta */
    }

    .main-menu {
        background-color: #c90581;
        opacity: 1;
        border-radius: 10px;
        padding: 15px;
        height: 100%; /* height proportional */
        /* width: calc(100% - 22px);  ca sa ramana aceeasi margine transparenta asemanatoare cu cea din stanga (in medie) */
    }

    .title {
        margin-top: 0;
        margin-bottom: 0.5rem;
        font-weight: bold;
        line-height: 1.2;
        font-size: 1.8rem;
    }

    .menu-categories {
        display: flex;
        flex-direction: column;
    }

        .menu-categories a {
            color: #FFFFFF;
            padding: 8px 0px;
            text-align: left;
            border-radius: 3px;
            display: flex;
            align-items: center;
            transition: all 0.5s;
        }

            .menu-categories a.active {
                color: #FFFFFF;
                background: #85573e;
            }

            .menu-categories a:hover {
                background: #85573e;
            }

    .pfp {
        height: 20vh;
        aspect-ratio: 1/1;
        object-fit: cover;
        border-radius: 0px;
    }

    .container-pic{
        height: 100%;
        width: 100%;
        object-fit: cover; 
        object-position: center;
    }

</style>
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ" crossorigin="anonymous">


<div class="container-menu">
        <div class="side-menu">
            <div class="menu-header">
                <a><img src="img/animal-3.png" class="pfp"></a>
                <p>@User.Identity?.Name</p>
            </div>

            <div class="menu-categories">
                <a class="active" href="@Url.Action("Index", "Main")"><i class="fas fa-home"></i>Home</a>
                <a href="@Url.Action("Index", "Projects")"><i class="fas fa-project-diagram"></i>Projects</a>
                <a asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage"><i class="fas fa-cog"></i>Settings</a>
            </div>
        </div>
        <div class="main-menu">
            <a><img src="~/img/deer-tulip.png" class="container-pic" /></a>
        </div>
</div>
<script src="~/js/index.js"></script>
