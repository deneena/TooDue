@model TooDue.Models.Project

@{
    ViewBag.Title = "Change Project Organiser";
}

<h2>Change Project Organiser</h2>

<div>
    <h4>Project: @ViewBag.ProjectName</h4>
</div>

<form asp-action="ChangeOrganiser" method="post">
    <input type="hidden" name="id" value="@Model.Project_id" />
    <div class="form-group">
        <label for="newOwnerId" class="control-label">Select New Organiser</label>
        <select id="newOwnerId" name="newOwnerId" class="form-control">
            <option value="">-- Select New Owner --</option>
            @foreach (var user in ViewBag.AllUsers)
            {
                <option value="@user.Value">@user.Text</option>
            }
        </select>
    </div>
    <div class="form-group">
        <input type="submit" value="Change Organiser" class="btn btn-warning" />
    </div>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
