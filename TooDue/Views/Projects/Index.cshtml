@{
    ViewBag.Title = "Projects";
}

<h2>Projects</h2>

@if (ViewBag.Message != null)
{
    <div class="alert @ViewBag.Alert">@ViewBag.Message</div>
}

@if (ViewBag.Projects != null && ViewBag.Projects.Count > 0)
{
    <table class="table">
        <thead>
            <tr>
                <th>Project Name</th>
                <th>Description</th>
                <th>Status</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var project in ViewBag.Projects)
            {
                <tr>
                    <td class="text-white">@project.Project_name</td>
                    <td class="text-white"> @project.Project_description</td>
                    <td class="text-white">@project.Project_status</td>
                    <td>
                        <a asp-controller="Tasks" asp-action="Show" asp-route-projectId="@project.Project_id" class="btn btn-info">Details</a>
                        
                        @if (project.CreatedByUserId == ViewBag.UserCurent || User.IsInRole("Admin"))
                        {
                            <a href="@Url.Action("Edit", new { id = project.Project_id })" class="btn btn-warning">Edit</a>
                            <a href="@Url.Action("Delete", new { id = project.Project_id })" class="btn btn-danger">Delete</a>
                        }
                        @if (User.IsInRole("Admin"))
                        {
                            <a href="@Url.Action("ChangeOrganiser", new { id = project.Project_id })" class="btn btn-info">Change Organiser</a>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No projects found. Click the button below to create a new project.</p>
}

<a href="@Url.Action("Create")" class="btn btn-primary">Create New Project</a>
