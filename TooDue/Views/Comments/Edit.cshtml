@model TooDue.Models.Comment

@{
    ViewData["Title"] = "Edit Comment";
}

<h1>Edit Comment</h1>

<h4>Comment</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
           
            <input type="hidden" asp-for="Comment_id" />
            <input type="hidden" asp-for="TaskId" />
            <input type="hidden" asp-for="UserId" value="@ViewBag.UserId" />
            <div class="form-group">
                <label asp-for="Comment_text" class="control-label"></label>
                <input asp-for="Comment_text" class="form-control" />
                <span asp-validation-for="Comment_text" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Comment_Date" class="control-label"></label>
                <input asp-for="Comment_Date" class="form-control" readonly />
                <span asp-validation-for="Comment_Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Show" asp-route-taskId="@Model.TaskId">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
