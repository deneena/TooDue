@model TooDue.Models.Task

@{
    ViewBag.Title = "Delete Task";
    var projectId = ViewBag.ProjectId ?? 0; 
}

<h2>Delete Task</h2>

<h3>Are you sure you want to delete this task?</h3>
<div>
    <h4>Task</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Task Name
        </dt>
        <dd class="col-sm-10">
            @Model.Task_name
        </dd>
        <dt class="col-sm-2">
            Description
        </dt>
        <dd class="col-sm-10">
            @Model.Task_description
        </dd>
        <dt class="col-sm-2">
            Completion Status
        </dt>
        <dd class="col-sm-10">
            @(Model.Task_completion)
        </dd>
        <dt class="col-sm-2">
            Created Date
        </dt>
        <dd class="col-sm-10">
            @Model.Task_create_date.ToString("yyyy-MM-dd")
        </dd>
        <dt class="col-sm-2">
            Complete Date
        </dt>
        <dd class="col-sm-10">
            @(Model.Task_completion == "Completed" ? Model.Task_complete_date.ToString("yyyy-MM-dd") : "N/A")
        </dd>
        <dt class="col-sm-2">
            Link to Media
        </dt>
        <dd class="col-sm-10">
            <a href="@Model.Link_to_media" target="_blank">Media</a>
        </dd>
    </dl>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="Task_id" />
        <input type="hidden" name="projectId" value="@projectId" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Show" asp-route-projectId="@projectId" class="btn btn-secondary">Cancel</a>
    </form>
</div>
