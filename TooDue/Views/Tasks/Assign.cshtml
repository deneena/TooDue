@model TooDue.Models.Task

@{
    ViewBag.Title = "Assign Task";
}

<h2>Assign Task</h2>

<form asp-action="Assign" method="post">
    <div class="form-horizontal">
        <h4>Task</h4>
        <hr />
        <input type="hidden" asp-for="Task_id" />

        <div class="form-group">
            <label class="control-label">Assign User</label>
            <select class="form-control" name="selectedUser" asp-items="ViewBag.Users"></select>
        </div>
        <div class="form-group">
            <input type="submit" value="Assign" class="btn btn-primary" />
        </div>
    </div>
</form>

<div>
    <a asp-action="Show" asp-route-projectId="@ViewBag.ProjectId">Back to List</a>
</div>
