@model TooDue.Models.Task

@{
    ViewBag.Title = "Mark Task as Completed";
}

<h2>Mark Task as Completed</h2>

<form asp-action="Mark" method="post">
    <div class="form-horizontal">
        <h4>Task</h4>
        <hr />
        <input type="hidden" asp-for="Task_id" />
        <input type="hidden" asp-for="Task_name" />
        <input type="hidden" asp-for="Task_description" />
        <input type="hidden" asp-for="Link_to_media" />

        <div class="form-group">
            <label class="control-label">Completion Status</label>
            <select class="form-control" asp-for="Task_completion">
                <option value="Not started">Not started</option>
                <option value="In work">In work</option>
                <option value="Completed">Completed</option>
            </select>
        </div>
        <div class="form-group">
            <input type="submit" value="Mark as Completed" class="btn btn-primary" />
        </div>
    </div>
</form>

<div>
    <a asp-action="Show" asp-route-projectId="@ViewBag.ProjectId">Back to List</a>
</div>
